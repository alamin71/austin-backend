{
  "info": {
    "_postman_id": "vidzo-admin-auth",
    "name": "VidZo Admin Authentication",
    "description": "Complete admin dashboard authentication endpoints collection",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "Authentication",
      "item": [
        {
          "name": "1. Admin Login",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"admin@vidzo.com\",\n  \"password\": \"admin123\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/api/v1/auth/login",
              "host": ["{{base_url}}"],
              "path": ["api", "v1", "auth", "login"]
            }
          },
          "response": []
        },
        {
          "name": "2. Forget Password",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"admin@vidzo.com\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/api/v1/auth/forget-password",
              "host": ["{{base_url}}"],
              "path": ["api", "v1", "auth", "forget-password"]
            }
          },
          "response": []
        },
        {
          "name": "3. Verify Reset OTP",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"admin@vidzo.com\",\n  \"otp\": \"123456\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/api/v1/auth/verify-reset-otp",
              "host": ["{{base_url}}"],
              "path": ["api", "v1", "auth", "verify-reset-otp"]
            }
          },
          "response": []
        },
        {
          "name": "4. Reset Password",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              },
              {
                "key": "resettoken",
                "value": "{{resetToken}}",
                "type": "text"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"admin@vidzo.com\",\n  \"otp\": \"123456\",\n  \"newPassword\": \"newAdmin456\",\n  \"confirmPassword\": \"newAdmin456\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/api/v1/auth/reset-password",
              "host": ["{{base_url}}"],
              "path": ["api", "v1", "auth", "reset-password"]
            }
          },
          "response": []
        },
        {
          "name": "5. Resend OTP",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"admin@vidzo.com\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/api/v1/auth/resend-otp",
              "host": ["{{base_url}}"],
              "path": ["api", "v1", "auth", "resend-otp"]
            }
          },
          "response": []
        },
        {
          "name": "6. Change Password",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              },
              {
                "key": "Authorization",
                "value": "Bearer {{accessToken}}"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"oldPassword\": \"admin123\",\n  \"newPassword\": \"newAdmin789\",\n  \"confirmPassword\": \"newAdmin789\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/api/v1/auth/change-password",
              "host": ["{{base_url}}"],
              "path": ["api", "v1", "auth", "change-password"]
            }
          },
          "response": []
        },
        {
          "name": "7. Refresh Token",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "refreshtoken",
                "value": "{{refreshToken}}"
              }
            ],
            "url": {
              "raw": "{{base_url}}/api/v1/auth/refresh-token",
              "host": ["{{base_url}}"],
              "path": ["api", "v1", "auth", "refresh-token"]
            }
          },
          "response": []
        }
      ]
    },
